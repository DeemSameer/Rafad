<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".popUpRate">

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="246dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tajawalmedium2"
                android:gravity="center"
                android:padding="10dp"
                android:text="تقييم المتبرع "
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/base"/>


            <LinearLayout
                android:layout_width="341dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/tajawalmedium2"
                    android:gravity="bottom"
                    android:text="حيث أن 5 تمثل ممتاز جدًا"
                    android:textColor="@color/newColor"/>

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/tajawalmedium2"
                    android:text="الرجاء إدخال تقييمك للمتبرع:"
                    android:textSize="14dp"
                    android:textColor="@color/base"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/Rate1"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:text="1"
                        app:buttonTint="@color/base" />

                    <RadioButton
                        android:id="@+id/Rate2"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:text="2"
                        app:buttonTint="@color/base" />

                    <RadioButton
                        android:id="@+id/Rate3"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="3"
                        app:buttonTint="@color/base" />

                    <RadioButton
                        android:id="@+id/Rate4"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="4"
                        app:buttonTint="@color/base" />

                    <RadioButton
                        android:id="@+id/Rate5"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="5"
                        app:buttonTint="@color/base" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/settext1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#880A0A" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="228dp"
                android:layout_height="36dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/DeclineRate"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:fontFamily="@font/tajawalmedium2"
                    android:text="إلغاء"
                    android:textAlignment="gravity"
                    android:textColor="@color/newColor"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/AcceptRate"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="#ffff"
                    android:fontFamily="@font/tajawalmedium2"
                    android:text="تقييم"
                    android:textColor="@color/base"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>