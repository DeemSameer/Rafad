<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToPadding="false">

<LinearLayout
    android:gravity="center"
    tools:context=".HistoryItemAdapter"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="35dp"
    android:layout_height="250dp"
    android:layout_width="333dp"
    android:orientation="vertical"
    android:elevation="5dp"
    android:outlineProvider="bounds"

 >
    <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
        android:layout_width="345dp"
        android:layout_height="150dp"
        android:gravity="center"
        app:corner_radius="30dp">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="345dp"
            android:layout_height="150dp"
            android:layout_weight="340"
            android:contentDescription="@string/todo"
            android:gravity="center"
            android:radius="20dp"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />
    </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>
    <TextView
        android:gravity="center"
        android:id="@+id/tit"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:fontFamily="@font/tajawalmedium2"
        android:text="Title"
        android:textAlignment="inherit"
        android:textColor="#397A96"
        android:textSize="18sp" />

    <TextView
        android:gravity="center"
                android:id="@+id/date"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/tajawalmedium2"
                android:text="10/10/2020"
                android:textAlignment="inherit"
                android:textColor="#397A96"
                android:textSize="12sp" />

            <TextView
                android:gravity="center"
                android:id="@+id/cat"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:fontFamily="@font/tajawalmedium2"

                android:text="Catogery"
          android:textSize="12sp" />

            <TextView
                android:gravity="center"
                android:id="@+id/des"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:fontFamily="@font/tajawalmedium2"
                android:text="Descerption"
                android:textAlignment="gravity"
                android:textColor="#CB0C0C0C" />
</LinearLayout>

</LinearLayout>